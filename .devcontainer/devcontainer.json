{
  "name": "Immich - Development",
  "service": "immich-dev-workspace",
  "dockerComposeFile": [
    "../docker/compose-dev.yml"
  ],
  "runArgs": [
    "--volume", "${localEnv:SSH_AUTH_SOCK}:/tmp/ssh-agent:ro"
  ],  
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "svelte.svelte-vscode",
        "ms-vscode-remote.remote-containers",
        "foxundermoon.shell-format",
        "timonwong.shellcheck",
        "rvest.vs-code-prettier-eslint",
        "bluebrown.yamlfmt",
        "vkrishna04.cspell-sync",
        //"vitest.explorer",
        "ms-playwright.playwright",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "forwardPorts": [3000, 9231, 9230, 2283],
  "portsAttributes": {
    "3000": {
      "label": "Immich - Frontend HTTP",
      "description": "The frontend of the Immich project",
      "onAutoForward": "openBrowserOnce"
    },
    "2283": {
      "label": "Immich - API Server - HTTP",
      "description": "The API server of the Immich project"
    },
    "9231": {
      "label": "Immich - API Server - DEBUG",
      "description": "The API server of the Immich project"
    },
    "9230": {
      "label": "Immich - Workers - DEBUG",
      "description": "The workers of the Immich project"
    }
  },
  "overrideCommand": true,
  "workspaceFolder": "/workspaces/immich",
  "mounts": [
    "source=${localEnv:IMMICH_WORKSPACE},target=/workspaces/immich,type=bind",
    "source=${localWorkspaceFolder}/.devcontainer,target=/workspaces/immich/.devcontainer,type=bind",
		"source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],  
  "postCreateCommand": "${containerWorkspaceFolder}/.devcontainer/server/container-start.sh",
  "remoteUser": "vscode",
  "userEnvProbe": "loginInteractiveShell",
  "containerEnv": {
    "SSH_AUTH_SOCK": "/tmp/ssh-agent",
    "UPLOAD_LOCATION": "/library",
    "DB_PASSWORD": "postgres",
    "DB_USERNAME": "postgres",
    "DB_DATABASE_NAME": "immich"
  }
}
